
@{
    ViewData["Title"] = "AdminPannel";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="text-center">
    <div class="d-flex justify-content-center">
        <h2 class="fw-bold">Admin Pannel</h2>
    </div>
</div>

<hr />

<div class="text-center container-fluid overflow-scroll h-100">
    <div class="border row container-fluid d-flex justify-content-center p-5 m-2 rounded-6">
        <div class="row">
            <div class="border row rounded-6 m-1 p-3 col">
                <label class="text-warp fw-bold ">Feedback</label>
                <label class="text-warp">Read Users Feedback</label>
                <a class="btn btn-special text-white green-outline-focus border-0 rounded-pill m-1 fw-bold" asp-area="" asp-controller="Admin" asp-action="ReadFeedback">Open</a>

            </div>
            <div class="border text-black-50 row rounded-6 m-1 p-3 col">
                <label class="text-warp fw-bold">Bans</label>
                <label class="text-warp">Ban And Unban Users</label>
                <a class="btn text-center disabled btn-special text-white green-outline-focus border-0 rounded-pill m-1 fw-bold" asp-area="" asp-controller="Admin" asp-action="Bans">Open</a>
            </div>
            <div class="border text-black-50 row rounded-6 m-1 p-3 col">
                <label class="text-warp fw-bold">Users</label>
                <label class="text-warp">Manage Users Account</label>
                <a class="btn disabled btn-special text-white green-outline-focus border-0 rounded-pill m-1 fw-bold" asp-area="" asp-controller="Admin" asp-action="Users">Open</a>
            </div>
        </div>
    </div>
</div>
