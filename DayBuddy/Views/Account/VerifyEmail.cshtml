
@{
    ViewData["Title"] = "VerifyEmail";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<nav class="text-center">
    <div class="d-flex justify-content-center">
        <h2 class="fw-bold">Verify Email</h2>
    </div>
</nav>
<hr />

<div class="text-center container-fluid p-md-5 h-100">
    <div class="border row container align-content-center h-75 rounded-6 align-self-center">
        @{
            <label class="fw-bold fs-3 text-warp p-3">We sent you an Email</label>
            <label class="text-warp p-1">Click the link to verify your email adress</label>
            <form method="post" class="flex-column row">
                <button class="btn outline-none-focus align-self-center text-white border-0 fw-bold rounded-pill btn-danger" type="submit">Re-send Email</button>
            </form>
        }
    </div>
</div>