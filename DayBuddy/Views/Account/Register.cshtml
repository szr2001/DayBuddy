@model DayBuddy.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_FullScreenLayout.cshtml";
}

<hr />

<div class="container d-flex justify-content-center align-items-center">
    <div class="text-center">
        <label class="display-6">Sign Up with Email</label>
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="green-outline-focus form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" class="green-outline-focus form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="green-outline-focus form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="RepeatPassword" class="control-label"></label>
                <input asp-for="RepeatPassword" type="password" class="green-outline-focus form-control" />
                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <button class="btn align-self-center border-0 btn-primary fw-bold outline-none-focus rounded-pill" style="background:purple" type="submit">Sign Up</button>
                <a asp-controller="Account" asp-action="Login" class="outline-none-focus rounded-pill btn btn-secondary">I have an account</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
