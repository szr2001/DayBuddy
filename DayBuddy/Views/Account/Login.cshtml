@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_FullScreenLayout.cshtml";
}

<hr />

<div class="container d-flex justify-content-center align-items-center">
    <div class="text-center">
        <label class="display-6">Sign In with Email</label>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2">
                <label class="control-label">Email</label>
                <input name="email" type="email" class="form-control" />
            </div>
            <div class="form-group m-2">
                <label class="control-label">Password</label>
                <input name="Password" type="password" class="form-control" />
            </div>
            <div class="form-group m-2">
                <button class="btn align-self-center btn-primary border-0 fw-bold rounded-pill" style="background:purple" type="submit">Log In</button>
                <a asp-controller="Account" asp-action="Register" class="rounded-pill btn btn-secondary">Create an account</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
