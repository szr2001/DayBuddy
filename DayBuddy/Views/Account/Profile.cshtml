@model DayBuddy.Models.UserProfile

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Profile</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Profile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Premium" /> @Html.DisplayNameFor(model => model.Premium)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sexuality" class="control-label"></label>
                <input asp-for="Sexuality" class="form-control" />
                <span asp-validation-for="Sexuality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="profile" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

