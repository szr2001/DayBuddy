@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="hide-scrollbar d-flex flex-column min-vh-100">
    <div class="container-fluid bg-light py-5 flex-grow-1">
        <div class="row">
            <div class="col">
                <h1 class="text-uppercase fw-bold text-dark mb-4" style="font-family: 'Segoe UI'; font-size: clamp(2rem, 4vw, 3rem);">
                    Privacy Policy
                </h1>
                <p class="text-muted" style="font-family: 'Segoe UI'; font-size: clamp(1rem, 3vw, 1.5rem);">
                    Your privacy is important to us. This policy explains how we collect, use, and protect your personal information.
                </p>
                <h2 class="text-dark fw-bold mt-4">What We Collect</h2>
                <ul class="text-muted">
                    <li>Name and email address when signing up</li>
                    <li>Usage data for improving user experience</li>
                </ul>
                <h2 class="text-dark fw-bold mt-4">How We Use Your Information</h2>
                <ul class="text-muted">
                    <li>To match you with compatible buddies</li>
                    <li>To send notifications about updates</li>
                </ul>
                <h2 class="text-dark fw-bold mt-4">Your Rights</h2>
                <p class="text-muted">You can request to view, update, or delete your personal data at any time by contacting us.</p>
            </div>
        </div>
    </div>
</div>